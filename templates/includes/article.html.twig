<div>
    <h1>{{ article.title }}</h1>
    <p>{{ article.text }}</p>
    {% for tag in article.tags %}
        <span class="badge badge-primary">{{ tag.name }}</span>
    {% endfor %}
    <p>{{ article.date|date("d/m/Y") }} by <a href="{{ path('article_user', {'username':article.user.username}) }}">{{ article.user.username }}</a></p>
    <div class="mb-2">
        {% if is_granted("ROLE_ADMIN") and is_granted('oauth2')%}
            <a href="{{ path("article_edit", {'id': article.id}) }}" class="btn btn-primary">Edit</a>
        {% endif %}
        {% if is_granted("ROLE_ADMIN") and is_granted('oauth2') %}
            <a href="{{ path("article_delete", {'id': article.id}) }}" class="btn btn-danger">Delete</a>
        {% endif %}
    </div>
</div>